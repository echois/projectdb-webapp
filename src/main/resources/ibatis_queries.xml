   <insert id="createProject" parameterClass="pm.pojo.Project">
      INSERT INTO project (
        projectCode,
        projectTypeId, 
        name, 
        description, 
        hostInstitution, 
        startDate, 
        nextReviewDate, 
        nextFollowUpDate, 
        endDate, 
        notes,
        todo,
        requirements
      ) values (
        #projectCode#, 
        #projectTypeId#, 
        #name#, 
        #description#, 
        #hostInstitution#, 
        #startDate#, 
        #nextReviewDate#,
        #nextFollowUpDate#, 
        #endDate#, 
        #notes#,
        #todo#,
        #requirements#
      )
   	  <selectKey keyProperty="id" resultClass="int">
        SELECT LAST_INSERT_ID() AS id
	  </selectKey>
   </insert>

